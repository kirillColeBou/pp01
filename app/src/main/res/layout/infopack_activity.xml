<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:paddingTop="50dp"
    android:paddingBottom="50dp"
    android:paddingLeft="25dp"
    android:paddingRight="25dp"
    android:scrollbars="none"
    android:background="#F5F5F5">

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="vertical"
         android:background="@drawable/border_background"
         android:padding="16dp">

        <LinearLayout
            android:id="@+id/back_button_layout"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:background="@drawable/background_button">

           <ImageView
               android:id="@+id/back_button"
               android:layout_width="20dp"
               android:layout_height="20dp"
               android:src="@drawable/ic_arrow_back_white"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Название упаковки:"
            android:textSize="14sp"
            android:textColor="#666"
            android:layout_marginBottom="4dp"/>

        <EditText
            android:id="@+id/packName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@drawable/background_edittext"
            android:padding="12dp"
            android:editable="false"
            android:focusable="false"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Товар:"
            android:textSize="14sp"
            android:textColor="#666"
            android:layout_marginBottom="4dp"/>

        <EditText
            android:id="@+id/productName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:background="@drawable/background_edittext"
            android:padding="12dp"
            android:editable="false"
            android:focusable="false"
            android:layout_marginBottom="16dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginVertical="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Категория:"
            android:textSize="14sp"
            android:textColor="#666"
            android:layout_marginBottom="4dp"/>

        <EditText
            android:id="@+id/category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_edittext"
            android:padding="12dp"
            android:editable="false"
            android:focusable="false"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Склад:"
            android:textSize="14sp"
            android:textColor="#666"
            android:layout_marginBottom="4dp"/>

        <EditText
            android:id="@+id/warehouse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_edittext"
            android:padding="12dp"
            android:editable="false"
            android:focusable="false"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Количество:"
            android:textSize="14sp"
            android:textColor="#666"
            android:layout_marginBottom="4dp"/>

        <EditText
            android:id="@+id/quantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_edittext"
            android:padding="12dp"
            android:editable="false"
            android:focusable="false"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Нумерация:"
            android:textSize="14sp"
            android:textColor="#666"
            android:layout_marginBottom="4dp"/>

        <EditText
            android:id="@+id/numeration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_edittext"
            android:padding="12dp"
            android:editable="false"
            android:focusable="false"
            android:layout_marginBottom="16dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginVertical="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="QR-код упаковки:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:gravity="center"/>

        <ImageView
            android:id="@+id/qrCodeImage"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:contentDescription="QR код упаковки"
            android:background="@drawable/border_background"/>

    </LinearLayout>

</ScrollView>